#**
 *  Render the top section of the page visible to users
 *#

<form action="#{url_for_home}" method="GET">
<div class="ui menu inverted">
  <a class="item" style="background-image:url(#{url_root}/img/library-logo-small.png); padding-left: 50px;background-repeat:no-repeat;" href="#url_for_home#if($request.params.get('debugQuery'))?debugQuery=true#end">
    Apache Solr IR Practice
  </a>

  #set( $selected = ! $queryOpts )
  <a class="item #if($selected)active#end" href="#url_for_home/?#debug#annotate">
    <i class="search icon"></i> 
    Simple Search
  </a>
  
  #set( $selected = ($queryOpts == "advance") )
  <a class="item  #if($selected)active#end" href="#url_for_home?&queryOpts=advance#debug#annotate">
    <i class="list layout icon"></i> 
    Advance Search
  </a>


    <a class="item" href="#url_root/#/#core_name">
        <i class="setting icon"></i>
        Solr Admin
    </a>

  <div class="right menu">
    <div class="item">
      
      <div class="ui icon input mini inverted" >
        
        <input type="text" name="q" placeholder="Search..." style="background-color:white;" />
        <button class="ui icon button small"><i class="search icon"></i></button>
        
      </div>

    </div>
  </div>
</div>
</form>

<h1 class="ui header center aligned">
    <a href="#url_for_home#if($request.params.get('debugQuery'))?debugQuery=true#end">
  <img src="#{url_root}/img/library-logo-medium.png"/>
  <div class="content">
    Apache Solr
    <div class="sub header">Information Retrieval Practice.</div>
  </div>
    </a>
</h1>
